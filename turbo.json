{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build"]
    },
    "css:watch": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "inputs": ["**/*.{ts,tsx}", "tsconfig*.json", "vite.config.ts"],
      "outputs": ["dist", "build"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": ["**/*.{ts,tsx}"]
    },
    "start": {
      "persistent": true,
      "cache": false
    }
  }
}
