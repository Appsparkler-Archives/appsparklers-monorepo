{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "netlify:dev": {
      "persistent": true,
      "cache": false
    },
    "storybook": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "inputs": [
        "lib/**/*.{ts,tsx}",
        "tsconfig.build.json",
        "tsconfig.app.json",
        "vite.config.ts"
      ],
      "outputs": ["dist"],
      "dependsOn": ["^lint"]
    },
    "lint": {
      "inputs": ["lib/**/*.{ts,tsx}"]
    }
  }
}
