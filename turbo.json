{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build", "^css"]
    },
    "css:watch": {
      "persistent": true,
      "cache": false
    },
    "css": {
      "inputs": ["**/*.{ts,tsx,js,jsx,css}"],
      "outputs": ["**/*.css"]
    },
    "build": {
      "inputs": ["**/*.{ts,tsx}", "tsconfig*.json", "vite.config.ts"],
      "outputs": ["dist"],
      "dependsOn": ["^build", "css"]
    },
    "lint": {
      "inputs": ["**/*.{ts,tsx}"]
    },
    "start": {
      "persistent": true,
      "cache": false
    }
  }
}
